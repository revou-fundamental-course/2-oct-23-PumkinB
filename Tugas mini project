        <br>
        <input id="input-field" type="number" placeholder="Celcius">
        </form>
    <div id="InputButton">
        <button type="button" onclick="con()">Conversion</button>
        <button type="button" onclick="res()">Reset</button>
       
    </div>
    <br>
    <label for="output-field">Fahrenheit (째F) </label>
